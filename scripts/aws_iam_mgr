source scripts/iam/user/aws_iam_update_password


function aws_iam_mgr(){
    while true; do

        echo -e "${GREEN}=============================================${RESET}"
        echo -e "${BOLD}${CYAN}          AWS IAM MANAGEMENT MENU            ${RESET}"
        echo -e "${GREEN}=============================================${RESET}"

        echo -e "${BOLD}${YELLOW} ðŸ”¹ User Management${RESET}"
        echo -e "   ${BOLD}1)${RESET} âžœ Create IAM User"
        echo -e "   ${BOLD}2)${RESET} âžœ List IAM Users"
        echo -e "   ${BOLD}3)${RESET} âžœ Add User to a Group"
        echo -e "   ${BOLD}4)${RESET} âžœ Delete IAM User"
        echo -e "   ${BOLD}5)${RESET} âžœ Set Initial password for IAM user(in development but works!)"
        echo -e "   ${BOLD}6)${RESET} âžœ Change password for IAM user(WIP)"
        echo -e "   ${BOLD}7)${RESET} âžœ Create an access key for an IAM user(WIP)"
        echo -e "   ${BOLD}8)${RESET} âžœ Delete access key for an IAM user(WIP)"

        echo -e "${GREEN}---------------------------------------------${RESET}"

        echo -e "${BOLD}${MAGENTA} ðŸ”¹ Group Management${RESET}"
        echo -e "   ${BOLD}9)${RESET} âžœ Create IAM Group"
        echo -e "   ${BOLD}10)${RESET} âžœ List IAM Groups"
        echo -e "   ${BOLD}11)${RESET} âžœ Check Total Users in a Group"
        echo -e "   ${BOLD}12)${RESET} âžœ List Groups a User Belongs To"
        echo -e "   ${BOLD}13)${RESET} âžœ Delete IAM Group"
        echo -e "   ${BOLD}14)${RESET} âžœ Remove User from a Group"

        echo -e "${GREEN}---------------------------------------------${RESET}"

        echo -e "${BOLD}${RED} ðŸ”¹ Other Options${RESET}"
        echo -e "   ${BOLD}15)${RESET} âžœ Back to Main Menu"

        echo -e "${GREEN}=============================================${RESET}"


        read -p "Choose an option: " iam_num

        case $iam_num in
            1)
            aws_iam_create_user
            bk
            ;;
            
            2)
            aws_iam_list_users
            bk
            ;;

            3)
            aws_iam_add_user_to_group
            bk
            ;;
            4)
            aws_iam_delete_user
            bk
            ;;
            5)
            aws_iam_user_initial_password
            bk
            ;;            
            9)
            aws_iam_create_group
            bk
            ;;
            10)
            aws_iam_list_groups
            bk
            ;;
            11)
            aws_iam_list_users_in_group
            bk
            ;;
            12)
            aws_iam_list_users
            aws_iam_user_group_count
            bk
            ;;
            13)
            aws_iam_delete_group
            bk
            ;;
            14)
            aws_iam_remove_user_from_group
            bk
            ;;
            15)
            echo "Going back to Main Menu"
            break;;
            *)
            echo "Invalid Input"
            sleep 1
            ;;
        esac
    done


}







